
if(EXISTS "${CMAKE_CURRENT_LIST_DIR}/PyCTestPreInit.cmake")
    include("${CMAKE_CURRENT_LIST_DIR}/PyCTestPreInit.cmake")
endif(EXISTS "${CMAKE_CURRENT_LIST_DIR}/PyCTestPreInit.cmake")

if(EXISTS "${CMAKE_CURRENT_LIST_DIR}/Init.cmake")

    if(NOT DEFINED CTEST_TRIGGER)
        set(CTEST_TRIGGER "Any" CACHE STRING "Delay submit until CTEST_TRIGGER == '(Any|Build|Test|Coverage|MemCheck|None)'")
    endif(NOT DEFINED CTEST_TRIGGER)

    include("${CMAKE_CURRENT_LIST_DIR}/Init.cmake")
    include_if("PyCTestPostInit.cmake")

    message(STATUS " -- Starting ${MODEL} Stages (${STAGES}) - ${CTEST_BUILD_NAME} --")

    foreach(_STAGE ${STAGES})
        include("${CMAKE_CURRENT_LIST_DIR}/${_STAGE}.cmake")
    endforeach(_STAGE ${STAGES})

    message(STATUS " -- Finished ${MODEL} Stages (${STAGES}) - ${CTEST_BUILD_NAME} --")

endif(EXISTS "${CMAKE_CURRENT_LIST_DIR}/Init.cmake")
