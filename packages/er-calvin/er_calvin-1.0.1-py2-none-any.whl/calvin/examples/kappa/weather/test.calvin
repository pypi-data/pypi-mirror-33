component Temperature() in -> out {
sensor : Sensor()

             .in > sensor.in
             sensor.out > .out
}

component Sensor() in -> out {
sensor : sensor.TriggeredTemperature()

             .in > sensor.trigger
             sensor.centigrade > .out
}

rule all_devices : device_scaling()
apply kappa : all_devices

kappa: Temperature()

voidport > kappa.in
kappa.out > voidport
