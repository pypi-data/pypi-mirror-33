#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage() {
    cat <<EOF 1>&2
usage: $(basename $0)
EOF
[[ $1 == "-h" ]] || [[ $1 == "--help" ]]; exit
}

[[ $1 == "-h" ]] || [[ $1 == "--help" ]] && usage "$@"

[[ $# != 0 ]] && usage

name="$(node -e "console.log(require('./package.json').name);")" || exit
url="https://www.npmjs.com/package/$name"
( set -x; browse "$url" )
