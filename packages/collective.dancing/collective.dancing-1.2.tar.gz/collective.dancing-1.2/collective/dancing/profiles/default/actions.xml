<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <object name="object_buttons" meta_type="CMF Action Category">
    <object name="send-as-newsletter" meta_type="CMF Action" i18n:domain="collective.dancing">
      <property name="title" i18n:translate="">Send as newsletter</property>
      <property name="description" i18n:translate="">Displays a form that lets you send this content item as a newsletter.</property>
      <property
         name="url_expr">string:${object/absolute_url}/send-newsletter.html</property>
      <property name="icon_expr"></property>
      <property name="available_expr"></property>
      <property name="permissions">
        <element value="collective.dancing: Preview newsletter"/>
        <element value="collective.dancing: Manage newsletters"/>
      </property>
      <property name="visible">True</property>
    </object>
  </object>
</object>

