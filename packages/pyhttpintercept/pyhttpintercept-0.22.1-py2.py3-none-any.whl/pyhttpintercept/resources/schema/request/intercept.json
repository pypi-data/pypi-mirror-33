{
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for PyHTTPIntercept intercept config",

  "definitions": {

    "modifier_paths": {
      "type": "array",
      "items": {"type": "string"}
    },

    "modifier_path": {
      "type": "object",
      "properties": {
        "search_path": {"type": "string"},
        "module_root": {"type": "string"}
      },
      "required": ["search_path", "module_root"],
      "additionalProperties": false
    },

    "uris": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/uri" }
    },

    "uri": {
      "type": "object",
      "properties": {
        "description": {"type": "string"},
        "active": {"type": "boolean"}
      },
      "required": ["active"],
      "additionalProperties": false
    }

  },

  "type": "object",
  "properties": {
    "selected_scenario": {"type": "string"},
    "modifier_paths": { "$ref": "#/definitions/modifier_paths" },
    "intercept_uris": { "$ref": "#/definitions/uris" }
  },
  "required": ["selected_scenario", "modifier_paths", "intercept_uris"],
  "additionalProperties": false
}