<div metal:use-macro="layout.base" i18n:domain="onegov.gazette">
    <tal:block metal:fill-slot="title">
        ${press_release.title}
    </tal:block>
    <tal:block metal:fill-slot="content">

        <div metal:use-macro="layout.macros['tab_menu']"></div>
        <div metal:use-macro="layout.macros['breadcrumbs']"></div>

        <div class="row manage-press-release">

            <div class="small-12 columns">

                <div class="clearfix">
                    <tal:block tal:repeat="action actions">
                        <a i18n:translate
                           class="button small ${action[2]} action-${action[0].lower()}"
                           href="${action[1]}"
                           target="${action[3]}">${action[0]}</a>
                    </tal:block>
                </div>

                <div class="panel callout radius" tal:condition="press_release.state == 'rejected'">
                    <p>
                        <span i18n:translate>This press release has been rejected.</span>
                        <span i18n:translate>Comment</span>: <strong>${press_release.rejected_comment}</strong>
                    </p>
                </div>

                <div metal:use-macro="layout.macros['blocked_press_release_callout']"></div>

                <div class="row">
                    <div class="small-12 medium-7 columns">
                        <h2>${press_release.title}</h2>
                        <div>
                            <tal:block tal:content="structure press_release.text"></tal:block>
                        </div>
                    </div>
                    <div class="small-12 medium-5 columns">
                        <dl>
                            <dt i18n:translate>State</dt>
                            <dd i18n:translate>${press_release.state}</dd>

                            <dt i18n:translate>Publication date</dt>
                            <dd>${layout.format_date(press_release.issue_date, 'datetime')}</dd>

                            <dt i18n:translate>Blocking period</dt>
                            <dd>${layout.format_date(press_release.blocking_period, 'datetime')}</dd>

                            <dt i18n:translate>Contact</dt>
                            <dd>${press_release.contact or ''}</dd>

                            <dt i18n:translate>Press conference</dt>
                            <dd>${press_release.conference or ''}</dd>

                            <dt i18n:translate>Organization</dt>
                            <dd>${press_release.organization}</dd>

                            <dt i18n:translate>User</dt>
                            <dd>${press_release.user_name}</dd>

                            <dt i18n:translate>Group</dt>
                            <dd>${press_release.group_name}</dd>

                            <dt i18n:translate>ID</dt>
                            <dd>${press_release.id}</dd>

                            <dt tal:condition="press_release.files" i18n:translate>Attachments</dt>
                            <dd tal:condition="press_release.files">
                                <ul>
                                    <li tal:repeat="file press_release.files"><a href="${request.link(file)}">${file.name}</a></li>
                                </ul>
                            </dd>
                        </dl>
                    </div>
                </div>

                <h3 i18n:translate>Changes</h3>
                <table class="changes stackable">
                    <thead>
                        <tr>
                            <th i18n:translate>Date/Time</th>
                            <th i18n:translate>User</th>
                            <th i18n:translate>Group</th>
                            <th i18n:translate>Change</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tal:block tal:repeat="change press_release.changes">
                            <tr>
                                <td>${layout.format_date(change.created, 'datetime')}</td>
                                <td>${change.user_name}</td>
                                <td>${change.user.group.name|None}</td>
                                <td>
                                    <span class="event" i18n:translate>${change.event}</span>
                                    <span class="text" tal:condition="change.text">${change.text}</span>
                                </td>
                            </tr>
                        </tal:block>
                    </tbody>
                </table>

            </div>
        </div>

    </tal:block>
</div>
