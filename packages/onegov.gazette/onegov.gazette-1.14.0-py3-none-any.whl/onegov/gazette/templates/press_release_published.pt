<div metal:use-macro="layout.base" i18n:domain="onegov.gazette">
    <tal:block metal:fill-slot="title">${press_release.title}</tal:block>
    <tal:block metal:fill-slot="content">
        <div metal:use-macro="layout.macros['blocked_press_release_callout']"></div>
        <div class="press-release-published">
            <div>
                <a href="${pdf}" class="right"><i class="fa fa-file-pdf-o" aria-hidden="true"></i> <tal:block i18n:translate>PDF</tal:block></a>
            </div>
            <div>
                <span class="blank-label">${press_release.organization}</span>
                <span class="blank-label">${layout.format_date(press_release.issue_date, 'datetime')}</span>
            </div>
            <div class="preview">
                <div metal:use-macro="layout.macros['press_release_content']"></div>
            </div>
        </div>
    </tal:block>
</div>
