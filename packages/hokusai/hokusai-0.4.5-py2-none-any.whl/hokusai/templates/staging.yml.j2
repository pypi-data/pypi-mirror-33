---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: {{ project_name }}-{{ component }}
  namespace: default
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: {{ project_name }}
        component: {{ component }}
        layer: {{ layer }}
      name: {{ project_name }}-{{ component }}
    spec:
      containers:
      - name: {{ project_name }}-{{ component }}
        {%- if environment %}
        env:
        {%- for k,v in environment.items() %}
        - name: {{ k }}
          value: {{ v }}
        {%- endfor -%}
        {%- endif -%}
        {%- if layer == 'application' %}
        envFrom:
        - configMapRef:
            name: {{ project_name }}-environment
        {%- endif %}
        image: {{ image }}
        imagePullPolicy: Always
        ports:
        - containerPort: {{ port }}
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: {{ project_name }}
    component: {{ component }}
    layer: {{ layer }}
  name: {{ project_name }}-{{ component }}
  namespace: default
spec:
  ports:
  - port: {{ port }}
    protocol: TCP
    targetPort: {{ port }}
  selector:
    app: {{ project_name }}
    component: {{ component }}
    layer: {{ layer }}
  {%- if internal %}
  type: ClusterIP
  {%- else %}
  type: LoadBalancer
  {%- endif %}

