{
  "$schema": "http://numengo.org/draft-04/schema", 
  "$id": "http://numengo.org/ngoci/project_loader",
  "title": "ProjectLoader", 
  "type": "object", 
  "additionalProperties": false, 
  "properties": {
    "pathList": {
      "type": "array", "items": {"type": "path"}
    },
    "extensions": {
      "type": "array", "items": {"type": "string"}
    },
    "recursive": {"type": "boolean", "default": true},
    "envVars": {
      "additionalProperties": {
        "type": "string"
      }, 
      "type": "object"
    },
    "objects": {
      "additionalProperties": {
        "type": "object"
      }, 
      "type": "object"
    }
  }
}