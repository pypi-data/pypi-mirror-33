{
  "$schema": "http://numengo.org/draft-04/schema", 
  "$id": "http://numengo.org/ngoci/environment", 
  "title": "Environment", 
  "type": "object", 
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "archi": {
      "enum": [ "32bit", "64bit" ]
      },
    "envVars": {
      "additionalProperties": {
          "type": "string"
      },
      "type": "object"
    },
    "packages": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
