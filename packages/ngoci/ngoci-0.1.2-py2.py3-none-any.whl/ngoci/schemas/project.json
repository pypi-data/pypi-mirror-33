{
  "$schema": "http://numengo.org/draft-04/schema",
  "$id": "http://numengo.org/ngoci/project",
  "title": "Project",
  "type": "object",
  "additionalProperties": true,
    "properties": {
        "devStatus": {
            "enum": [
                "Alpha",
                "Beta",
                "Production/Stable",
                "Mature"
            ]
        },
        "deps": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "depsInstall": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "depsSetup": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "depsTest": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "releaseDate": {
            "type": "date"
        },
        "keywords": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "shortDescription": {
            "type": "string"
        },
        "docUrl": {
            "type": "string",
            "format": "uri-reference"
        },
        "lic": {
            "type": "string"
        },
        "authorEmail": {
            "type": "string",
            "format": "email"
        },
        "authorName": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "name": {
            "default": "Nameless",
            "type": "string"
        },
        "type": {
            "type": "string",
            "enum": [
                "python",
                "django-plugin",
                "django-app",
                "django-cms",
                "cpp",
                "sim"
            ]
        },
        "repoName": {
            "default": "{{ this.type }}-{{ this.name|lower|replace(' ','-') }}",
            "type": "string"
        },
        "githubUsername": {
            "default": "numengo",
            "type": "string"
        },
        "gitRepo": {
            "default": "git@github.com:{{this.githubUsername}}//{{this.repoName}}.git",
            "format": "uri-reference",
            "type": "string"
        },
        "website": {
            "type": "string",
            "format": "uri-reference"
        },
        "description": {
            "type": "string"
        },
        "pythonSupport": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "vsGuid": {
            "type": "string"
        },
        "pythonEnvs": {
            "type": "array",
            "items": {
                "$ref": "http://numengo.org/ngoci/python_environment"
            }
        },
        "entryPoints": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "license": {
            "enum": [
                "GNU General Public License v3",
                "NUMENGO",
                "BSD 2-Clause License",
                "BSD 3-Clause License",
                "MIT license",
                "ISC license",
                "Apache Software License 2.0"
            ]
        },
        "packageName": {
            "default": "{{ this.name|lower|replace(' ','_')|replace('-','_') }}",
            "type": "string"
        },
        "envVarRepoDir": {
            "default": "DIR_{{this.packageName|upper}}_ROOT",
            "type": "string"
        },
        "alias": {
            "default": "{{this.name}}",
            "type": "string"
        },
        "distributionName": {
            "default": "{{ this.packageName|replace('_','-') }}",
            "type": "string"
        },
        "macroPrefix": {
            "default": "{{ this.packageName|upper }}",
            "type": "string"
        },
        "repoDir": {
            "isPathExisting": true,
            "type": "path"
        },
        "dirsSrc": {
            "type": "array",
            "items": {
                "type": "path"
            },
            "default": [ "src" ]
        },
        "dirsTest": {
            "type": "array",
            "items": {
                "type": "path"
            },
            "default": [ "tests" ]
        },
        "dirsData": {
            "type": "array",
            "items": {
                "type": "path"
            }
        },
        "hasTest": {
            "type": "boolean"
        }
    }
}
